<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.multiscreen">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MultiScreen">
        <activity android:name="com.example.multiscreen_Kutepov.Urugvai"></activity>
        <activity android:name="com.example.multiscreen_Kutepov.Columbia" />
        <activity android:name="com.example.multiscreen_Kutepov.Chili" />
        <activity android:name="com.example.multiscreen_Kutepov.Brasilia" />
        <activity android:name="com.example.multiscreen_Kutepov.Argentina" />
        <activity android:name="com.example.multiscreen_Kutepov.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>